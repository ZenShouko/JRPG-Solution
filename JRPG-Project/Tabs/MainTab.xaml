<UserControl x:Class="JRPG_Project.Tabs.MainTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JRPG_Project.Tabs"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--Buttons-->
        <StackPanel Margin="15" VerticalAlignment="Center">
            <Button x:Name="BtnDispatch" Content="Dispatch" Style="{StaticResource defaultButton}" Margin="0 0 0 20" Click="OpenTab"/>
            <Button x:Name="BtnInventory" Content="Inventory" Style="{StaticResource defaultButton}" Margin="0 0 0 20" Click="OpenTab"/>
            <Button x:Name="BtnTeam" Content="Team" Style="{StaticResource defaultButton}" Margin="0 0 0 20"/>
            <Button x:Name="BtnSettings" Content="Settings" Style="{StaticResource defaultButton}" Margin="0 0 0 20"/>
            <Button x:Name="BtnSave" Content="Manage save" Style="{StaticResource defaultButton}" Margin="0 0 0 20"/>
        </StackPanel>

        <!--Progress-->
        <StackPanel Grid.Column="1" Margin="15">
            <TextBlock FontSize="20" Text="Objective:"/>
            <TextBlock Text="It's time to start a new journey!"/>
        </StackPanel>
    </Grid>
</UserControl>
