<UserControl x:Class="JRPG_Project.Tabs.BattleTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JRPG_Project.Tabs"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!--Foe row-->
        <StackPanel x:Name="FoePanel" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2">
            <!--<Border BorderBrush="MediumVioletRed" Background="#FAF1E4" BorderThickness="1 1 2 3" CornerRadius="2" Margin="8 0">
                <StackPanel>
                    <ProgressBar Width="85" Style="{StaticResource XpProgressBar}" Value="100" Foreground="RoyalBlue" Height="6" Margin="2"/>
                    <Image Source="/Resources/Assets/Characters/maniani.png" Width="100" Height="100" Stretch="UniformToFill" Margin="0 4"/>
                    <ProgressBar Style="{StaticResource XpProgressBar}" Value="80" Foreground="Crimson" Height="8" Margin="2"/>
                </StackPanel>
            </Border>-->
        </StackPanel>
        
        <!--Foe Anouncer-->
        <TextBlock x:Name="TxtFoeAnouncer" Text="Sample Foe text" Grid.Row="1" Foreground="Crimson" Background="WhiteSmoke" Padding="4"
                   VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Center" FontSize="18"/>

        <!--Global Anouncer-->
        <TextBlock x:Name="TxtGlobalAnouncer" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Center"
                   FontSize="34" Padding="4 6" Text="バトルがはじまるよ" Style="{StaticResource CoolFont}" FontWeight="Medium" Background="GhostWhite"/>

        <!--Player Anouncer-->
        <TextBlock x:Name="TxtPlayerAnouncer" Text="Sample Player text" Grid.Row="3" Foreground="RoyalBlue" Background="WhiteSmoke" Padding="4"
                   VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Center" FontSize="18"/>

        <!--Player row-->
        <StackPanel x:Name="PlayerPanel" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2" Grid.Row="4"/>
    </Grid>
</UserControl>
